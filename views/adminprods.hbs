<div class="container">
    <div class="row">
       <div class="col-12">

           <h4>Productos Cargados</h4>

           <div class="col-4 mt-3">
                <a class="btn btn-primary" href="/admin/productos/alta">Alta de producto</a>
           </div>

           <table class="table table-hover  mt-3 text-center">
               <thead>
                   <tr>
                        <th>Nombre</th>
                        <th>Descripcion</th>
                        <th>Imagen</th>
                        <th>Precio</th>
                        <th>Categoria</th>
                        <th></th>
                        <th></th>
                   </tr>
               </thead>

               <tbody>
                   {{#each productos}}
                   <tr>
                       <td>{{nombre}}</td>
                       <td>{{descripcion}}</td>
                       <td><img src='/{{imagen}}'style="width: 200px; height:auto;"></td>
                       <td>${{precio}}</td>
                       <td>{{nombre_categoria}}</td>
                       <td><i class="fas fa-cogs text-primary pr-3 pl-3"></i></td>
                       <td><a href="/admin/productos/baja/{{id}}"><i class="fas fa-trash text-danger pr-3 pl-3 " style="cursor:pointer"></i></a></td>
                   </tr>
                   {{/each}}
               </tbody>

           </table>

       </div>
    </div>

</div>